<?xml version="1.0"?>
<launch>
  <!-- Launch Gazebo with arena world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find sim_pkg)/worlds/arena.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <!-- Spawn robot with markers -->
  <node name="spawn_robot" pkg="gazebo_ros" type="spawn_model"
        args="-file $(find sim_pkg)/models/robot_with_markers/model.sdf
              -sdf
              -model robot_with_markers
              -x 0.0
              -y 0.0
              -z 0.1"
        output="screen"/>

  <!-- Publish static TF: world -> camera_link -->
  <!-- Камера сверху, смотрит вниз на робота -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="world_to_camera_tf"
        args="0 0 3.0 0 1.5708 0 world camera_link"/>
  <node pkg="tf2_ros" type="static_transform_publisher" name="camera_to_optical_tf"
        args="0 0 0 -1.570796 0 -1.570796 camera_link camera_link_optical"/>

  <!-- Expected topics after launch:
       /camera/image_raw (sensor_msgs/Image)
       /camera/camera_info (sensor_msgs/CameraInfo)
       /tf and /tf_static (with world -> camera_link transform)
  -->
</launch>

